{
  "name": "itkbtpapp",
  "version": "1.0.0",
  "description": "Itk BTP App.",
  "repository": "BTP ITK Lite",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/postgres": "^1.1.0",
    "@sap-cloud-sdk/core": "^1.54.2",
    "@nestjs/common": "^9.3.9",
    "@sap-cloud-sdk/util": "^3.0.1",
    "@sap/approuter": "^12.0.0",
    "@sap/audit-logging": "^3.2.0",
    "@sap/cds": "^7.1.2",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.19",
    "@sap/hana-client": "^2.5.109",
    "@sap/xsenv": "^3.3.2",
    "@sap/xssec": "^3.2.13",
    "@ui5/cli": "^2.14.9",
    "archiver": "^5.3.1",
    "axios": "^1.3.4",
    "buffer": "^6.0.3",
    "cf-nodejs-logging-support": "^6.14.1",
    "cfenv": "^1.2.4",
    "concurrently": "^5.3.0",
    "dotenv": "^16.0.3",
    "express": "^4",
    "file-type": "^18.2.1",
    "form-data": "^4.0.0",
    "fs": "^0.0.1-security",
    "g": "^2.0.1",
    "jose": "^4.12.0",
    "jszip": "^3.10.1",
    "node-fetch": "^2.6.9",
    "node-jose": "^2.2.0",
    "passport": "0.6.0",
    "path": "^0.12.7",
    "sap-cf-mailer": "^0.0.5",
    "socks": "^2.7.1",
    "ssh2-sftp-client": "^9.0.4",
    "stream": "^0.0.2"
  },
  "devDependencies": {
    "@sap/cds-dk": "^7.1.1"
  },
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "start": "cds-serve",
    "local:dev": "concurrently --kill-others \"npm run local:cds:watch\" \"npm run local:approuter\"",
    "local:debug": "concurrently --kill-others \"npm run local:cds:run\" \"npm run local:approuter\"",
    "local:cds:watch": "node node_modules/@sap/cds/bin/cds watch",
    "local:cds:run": "node --inspect node_modules/@sap/cds/bin/cds-serve",
    "local:approuter": "cd app/ && npm start",
    "ui5-start": "ui5 serve --port 8080",
    "build": "ui5 build -a --clean-dest ",
    "mta:package": "mbt build --mtar ITKApp_0.0.1.mtar --platform cf",
    "mta:package:deploy": "npm run mta:package && npm run mta:deploy",
    "mta:deploy": "cf deploy mta_archives/ITKApp_0.0.1.mtar -f",
    "local:docker:run": "docker-compose up",
    "local:pg": "cds watch --profile pg",
    "local:db:build": "cds deploy --profile pg"
  },
  "cds": {
    "odata": {
      "version": "v4"
    },
    "features": {
      "cds_tx_inheritance": false,
      "cds_tx_protection": false
    },
    "auth": {
      "passport": {
        "strategy": "JWT"
      }
    },
    "requires": {
      "auth": {
        "kind": "xsuaa"
              },
        "db": {
        "kind": "postgres"
            },
      "[development]" : {
        "kind":"postgres",
        "impl": "@cap-js/postgres",
        "credentials": {
          "host": "localhost",
          "port": 5432,
          "database": "itkdatadb",
          "user": "postgres",
          "password": "postgres"
        }
      }
    }
  }
}